<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:orientation="vertical"
              tools:context="com.kescoode.xmail.ui.fragment.LoginAccountFragment">

    <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_email"
            android:inputType="textEmailAddress"
            android:text="@string/default_email"/>

    <EditText
            android:id="@+id/et_email_passwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_email_passwd"
            android:inputType="textPassword"
            android:text="@string/default_email_passwd"/>

    <com.dd.CircularProgressButton
            android:id="@+id/cpb_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_mail_list_divider"
            android:textColor="@color/white"
            app:cpb_iconComplete="@drawable/action_done"
            app:cpb_iconError="@drawable/action_failed"
            app:cpb_textIdle="@string/login"/>

</LinearLayout>
